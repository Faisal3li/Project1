<h3>All the Posts</h1>

<div>
  <% @posts.each do |post| %>
    <h3><%= link_to(post.post_title, post_path(post))%></h3>
    <p><%= post.post_text %></p>
<p><%= link_to(post.user.name, user_path(post.user))%></p>
  
    <div>
      <p><%= link_to("Delete", "/posts/#{post.id}", method: "delete") %></p>
      <p><%= link_to("Edit", "/posts/#{post.id}/edit") %></p>
    </div>
  <% end %>
</div>