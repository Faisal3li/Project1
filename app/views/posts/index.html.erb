<h2 class="showPost">All the Posts</h2>

<div class="arts row">
<% @posts.reverse.each do |post| %>
<div class="col s3">
<div class="card medium">
   <div class="card-image waves-effect waves-block waves-light">

</div>
   <div class="card-content">
     <span class="card-title activator grey-text text-darken-4">
    <h6><span class="showPost"> Title:</span> <span class="postBody"> <%= link_to "#{post.post_title}", post_path(post)%> </span> </h6>
    <h6><span class="showPost"> Type: </span> <span class="postBody"> <%= post.post_type%> </span> </h6>
    <h6><span class="showPost"> Tags: </span> <span class="postBody"> <%= post.post_tags.pluck(:tag).join(", ")%></span> </h6>
    <% if post.user %>

    <h6><span class="showPost">
    By:
    </span>
      <span class="postBody">
        <%= link_to post.user.name, "users/#{post.user.id}"%>
    </span> </h6>
 <% end %>
  
   <% if current_user.id == post.user.id %>
     <%= link_to 'Edit', edit_post_path(post), class: "profile-btn btn blue z-depth-1 bestFooter paddingOnLeft" %>
     <%= link_to 'Delete', post_path(post), method: :delete, class: "profile-btn btn blue z-depth-1 bestFooter" %>
   <% end %>
     </span>
   </div>
 </div>
</div>
<% end %>
</div>