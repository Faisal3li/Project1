<%= form_for @post  do |form| %>
    <%= form.label :post_title %>
    <%= form.text_field :post_title %>
    <br>
    <%= form.label :post_text %>
    <%= form.text_field :post_text %>
    <br>
    <%= form.label :post_type %>
    
        <%= form.select :post_type, options_for_select([["Cheff", "cheff"], ["Trainer", "trainer"]], selected: @post.post_type || nil) %>

    <br>
    <%= form.label :Tags %>
    <br>
    <%= form.collection_check_boxes :post_tag_ids, PostTag.all, :id, :tag %>
    <br>
    <br>
  <%= form.submit class: "profile-btn btn blue z-depth-1 bestFooter"  %>
<% end %>
